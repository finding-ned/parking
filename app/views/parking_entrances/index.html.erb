<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2" >
      
    </div>
    <div class="col-sm-8" >
      
      <p id="notice"><%= notice %></p>

      <h3>Parking Entrances</h3>

      <table>
        <thead>
          <tr>
            <th>Ref No.</th>
            <th>Description</th>
            <th>Isactive</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @parking_entrances.each do |parking_entrance| %>
            <tr>
              <td><%= parking_entrance.entrance_refno %></td>
              <td><%= parking_entrance.entrance_description %></td>
              <td><%= parking_entrance.isactive %></td>
              <td><%= link_to 'Show', parking_entrance %></td>
              <td><%= link_to 'Edit', edit_parking_entrance_path(parking_entrance) %></td>
              <td><%= link_to 'Remove', parking_entrance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Parking Entrance', new_parking_entrance_path %>

    </div>
    <div class="col-sm-2" >
      
    </div>
  </div>
</div>
